<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.framgia.englishconversation.screen.conversationdetail.ConversationDetailViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.framgia.englishconversation.screen.conversationdetail.ConversationDetailActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/card_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dp_4">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_8">

                <include
                    android:id="@+id/layout_header"
                    layout="@layout/item_header_timeline"
                    bind:timelineModel="@{viewModel.timelineModel}" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_conversation"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_300"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/color_grey_200"
                    android:padding="@dimen/dp_4"
                    app:layoutManager="LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_header"
                    bind:adapter="@{viewModel.adapter}"
                    bind:scrollPosition="@{viewModel.updatePositionUi}" />

                <ImageView
                    android:id="@+id/player"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@{viewModel.playing == true ? @drawable/ic_pause_circle_outline_black : @drawable/ic_play_circle_outline_black}"
                    android:onClick="@{() -> viewModel.onControllerConversationClick()}"
                    app:layout_constraintEnd_toEndOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_detail" />

    </android.support.constraint.ConstraintLayout>

</layout>
